@model System.Collections.Generic.List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("New Movie", "MovieForm", "Movie", new {source = "New"}, new {@class="btn btn-primary"})

<table width="700">
    <thead>
    <tr>
        <th>Name</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movie", new {id = movie.Id}, null)
                </td>
                <td>
                    @Html.DisplayFor(m => movie.Genre.Name)
                </td>
            </tr>
        }
    </tbody>
</table>